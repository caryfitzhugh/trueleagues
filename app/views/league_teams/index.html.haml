.page-header
  %h1
    Teams
    %small
      = breadcrumb_sep
      %a{:href => league_path(@league)}
        = @league.name
.pull-right
  %a.btn.btn-primary{:href => new_league_team_path(@league)} New Team

.clearfix

%table.table.table-striped.table-bordered
  %tr
    %th &nbsp;
  - if @teams.empty?
    %tr
      %th{:colspan=>3}
        %h3.text-center
          No Teams
  - else
    - @teams.sort_by {|team| team.name }.each do |team|
      %tr
        %td
          %a{:href => team_path(team)}= team.name
